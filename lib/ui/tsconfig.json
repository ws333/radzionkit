{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "ES2020",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "paths": {
      "@lib/ui/*": ["./*"],
      "@lib/utils/*": ["../utils/*"],
      "@lib/codegen/*": ["../codegen/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist"],
  "references": [{ "path": "../utils" }]
}
