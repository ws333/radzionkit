{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node10",
    "paths": {
      "@lib/utils/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["dist"]
}
